{% block subject 'New dataset(s) file for ' ~ datasetSubmission.dataset.udi %}

{% block body_html %}
    New Dataset Files Submitted for {{ datasetSubmission.dataset.udi }}:<br>
    <br>
    Submitter: {{ datasetSubmission.submitter.firstName }} {{ datasetSubmission.submitter.lastName }}<br>
    Number of Files: {{ datasetSubmission.fileset.numberOfFiles }} <br>
    Total File Size:  {{ datasetSubmission.fileset.fileSize|formatBytes }}<br>
    UDI: {{ datasetSubmission.dataset.udi }}<br>
    Dataset Title: {{ datasetSubmission.dataset.title }}<br>
    Research Group: {{ datasetSubmission.dataset.researchGroup.name }}<br>
{% endblock %}

{% block body_text %}
    New Dataset Files Submitted for {{ datasetSubmission.dataset.udi }}:

    Submitter: {{ datasetSubmission.submitter.firstName }} {{ datasetSubmission.submitter.lastName }}
    Number of Files: {{ datasetSubmission.fileset.numberOfFiles }}
    Total File Size:  {{ datasetSubmission.fileset.fileSize|formatBytes }}
    UDI: {{ datasetSubmission.dataset.udi }}
    Dataset Title: {{ datasetSubmission.dataset.title }}
    Research Group: {{ datasetSubmission.dataset.researchGroup.name }}
{% endblock %}
