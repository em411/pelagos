{% extends 'base.html.twig'%}
{% block title %}{{ dataset.udi }}{% endblock %}

{%block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('file-manager') }}

{%endblock stylesheets  %}

{% block body %}
<div class="bootstrap">
    <div class="container">
        <div class="row">
            <main class="col-lg-9 overflow-auto">
                <div class="pt-3">
                    <h2> {{ dataset.title }} </h2>
                </div>
                <div class="d-flex justify-content-between py-2">
                    <div>
                        <div>
                            <strong>Authors:</strong> {{ dataset.datasetSubmission.authors }}
                        </div>
                        <div>
                            <strong>Published on </strong> {{ dataset.acceptedDate|date('M d Y H:i T', 'UTC') }}
                        </div>
                        <div>
                            <strong>File Format:</strong> {{ dataset.datasetSubmission.distributionFormatName }}
                        </div>
                    </div>
                    <div>
                        <div>
                            <div>
                                <strong>DOI:</strong> {{ dataset.doi.doi }}
                            </div>
                            <div>
                                <strong>UDI:</strong> {{ dataset.udi }}
                            </div>
                            <div>
                                <strong>File Size:</strong> {{ dataset.datasetSubmission.fileset.zipFileSize|formatBytes }}
                            </div>
                        </div>
                    </div>
                </div>
                <hr>
                <div class="py-2">
                    <h6><strong>Abstract:</strong></h6>
                    <p>
                        {{ dataset.abstract }}
                    </p>
                </div>
                <hr>
                <div class="py-2">
                    <h6><strong>Suggested Citation:</strong></h6>
                    <p>
                        {{ dataset.citation }}
                    </p>
                </div>
                <hr>
                <div class="py-2">
                    <h6><strong>Purpose:</strong></h6>
                    <p>
                        {{ dataset.datasetSubmission.purpose }}
                    </p>
                </div>
                {% include 'Dataland/v2/publications.html.twig' %}
                <hr>
                <div class="py-2">
                    <div id="file-manager-app" data-id="{{ dataset.datasetSubmission.id }}" data-write-mode="{{ (datasetSubmissionLockStatus) ? false : true }}"></div>
                </div>
            </main>
            {% include 'Dataland/v2/detail-cards.html.twig' %}
        </div>
    </div>
</div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('file-manager') }}
{% endblock %}