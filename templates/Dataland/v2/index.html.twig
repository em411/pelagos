{% extends 'base.html.twig' %}
{% block title %}{{ dataset.udi }}{% endblock %}

{% block head %}
    {{ parent() }}

    {% if dataset.isAvailable %}
        {% include 'Dataland/metadata.markup.twig' %}
    {% else %}
        <meta name="robots" content="noindex"/>
    {% endif %}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('file-manager') }}
{% endblock stylesheets %}

{% block body %}
    <div class="bootstrap">
        <div class="container">
            <div class="row">
                <main class="col-lg-9 overflow-auto">
                    <div class="pt-3">
                        {% include 'Dataland/v2/status-badge.html.twig' %}
                        <h2> {{ dataset.title }} </h2>
                    </div>
                    <div class="d-flex justify-content-between py-2">
                        <div>
                            <div>
                                <strong>Authors:</strong> {{ dataset.datasetSubmission.authors }}
                            </div>
                            <div>
                                <strong>Published on </strong> {{ dataset.acceptedDate|date('M d Y H:i T', 'UTC') }}
                            </div>
                        </div>
                        <div>
                            <div>
                                <div>
                                    <strong>DOI:</strong> {{ dataset.doi.doi }}
                                </div>
                                <div>
                                    <strong>UDI:</strong> {{ dataset.udi }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr>
                    <div class="py-2">
                        <h6><strong>Abstract:</strong></h6>
                        <p>
                            {{ dataset.abstract }}
                        </p>
                    </div>
                    <hr>
                    <div class="py-2">
                        <img src="{{ asset('build/images/map.jpg') }}" alt="map here">
                    </div>
                    <hr>
                    <div class="py-2">
                        <h6><strong>Suggested Citation:</strong></h6>
                        <p>
                            {{ dataset.citation }}
                        </p>
                    </div>
                    <hr>
                    <div class="py-2">
                        <h6><strong>Purpose:</strong></h6>
                        <p>
                            {{ dataset.datasetSubmission.purpose }}
                        </p>
                    </div>
                    {% include 'Dataland/v2/publications.html.twig' %}
                    <hr>
                    <div class="py-2">
                        <div id="file-manager-app" data-id="{{ dataset.datasetSubmission.id }}"
                             data-write-mode="{{ (datasetSubmissionLockStatus) ? false : true }}"></div>
                    </div>
                    <hr>
                    <div class="py-2">
                        <h6><strong>Formatted Metadata:</strong></h6>
                        <div class="border border-chart-secondary">
                            <div class="mx-1">
                                {% if rawxml %}
                                    {{ rawxml|transformXml('xml-to-html-ISO.xsl')|raw }}
                                {% else %}
                                    No Metadata Available
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </main>
                <aside class="col-lg-3">
                    {% include 'Dataland/v2/detail-cards.html.twig' %}
                </aside>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('file-manager') }}
{% endblock %}
