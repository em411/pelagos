<!-- config/xml/Pelagos.Person.dcm.xml -->
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                        http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="Pelagos\Person" table="person">
        <id name="id" type="integer">
            <generator strategy="AUTO" />
        </id>

        <field name="firstName" column="person_first_name" type="string" />
        <field name="lastName" column="person_last_name" type="string" />
        <field name="emailAddress" column="person_email_address" type="string" />
    </entity>
</doctrine-mapping>
