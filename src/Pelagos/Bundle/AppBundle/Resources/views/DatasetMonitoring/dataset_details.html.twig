{% for dataset in datasets %}
    {% if dataset.datasetSubmission and dataset.datasetSubmission.authors%}
        <div class="attr"><span class="attr">Dataset Author(s):</span> {{dataset.datasetSubmission.authors}}</div>
    {% endif %}
    <div class="attr"><span class="attr">Primary Point of Contact:</span> {{dataset.primaryPointOfContact.LastName|default}}, {{dataset.primaryPointOfContact.FirstName|default}}</div>
    {% if dataset.dif.secondaryPointOfContact %}
        <div class="attr"><span class="attr">Secondary Point of Contact:</span> {{dataset.dif.secondaryPointOfContact.LastName}}, {{dataset.dif.secondaryPointOfContact.FirstName}}</div>
    {% endif %}
    <div class="abstract">
        <div><span class="attr">Abstract:</span></div>
        <div>{{dataset.abstract | slice(0,500)}}{% if dataset.abstract|length > 500 %}...{% endif %}</div>
    </div>
{% endfor %}
