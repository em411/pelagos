<fieldset>
    <legend>Metadata Contact</legend>
    <table class="tab-table">
        {% set contact = form.metadataContacts | first %}
        <tr>
            <td>
				<span class="helpSection">
					{% image '@PelagosAppBundle/Resources/public/images/info32.png' %}
					<img class="info" src="{{ asset_url }}">
					{% endimage %}
					<div class="tooltiptext">
						The name of the individual responsible for maintaining the metadata, typically the scientists or researcher who created the dataset.
					</div>
				</span>
                <select class="contactperson" id="metadatacontact" name="{{contact.person.vars.full_name}}" required="required">
                    {% if contact.vars.data.person|default %}
                    <option selected value="{{contact.vars.data.person.id}}">
                        {{contact.vars.data.person.lastName}}, {{contact.vars.data.person.firstName}}, {{contact.vars.data.person.emailAddress}}
                    </option>
                    {% endif %}
                </select>
                <label for="metadatacontact" class="error"></label>
                <div id="datasetcontactinformation">
                    <span field="position">{{ contact.vars.data.person.position }}</span><br />
                    <span field="organization"> {{ contact.vars.data.person.organization }}</span><br />
                    <span field="deliveryPoint"> {{ contact.vars.data.person.deliveryPoint }}</span><br />
                    {% if contact.vars.data.person.city is not null %}
                        <span field="city">{{ contact.vars.data.person.city }},</span>
                    {% else %}
                        <span field="city">{{ contact.vars.data.person.city }}</span>
                    {% endif %}
                    <span field="administrativeArea"> {{ contact.vars.data.person.administrativeArea }}</span>
                    <span field="postalCode"> {{ contact.vars.data.person.postalCode }}</span><br />
                    <span field="country"> {{ contact.vars.data.person.country }}</span><br />
                    <span field="phoneNumber"> {{ contact.vars.data.person.phoneNumber }}</span><br />
                    <span field="url">{{ contact.vars.data.person.url }}</span> <br />
                </div>

            </td>
        </tr>
        <tr>
            <td>
				<span class="helpSection">
					{% image '@PelagosAppBundle/Resources/public/images/info32.png' %}
					<img class="info" src="{{ asset_url }}">
					{% endimage %}
					<div class="tooltiptext">
						Point of Contact: Party who can be contacted for acquiring knowledge about or acquisition of the resource.<br>
						Principal Investigator: Key party responsible for gathering information and conducting research.<br>
						Author: Party who authored the resource.<br>
					</div>
				</span>
                {{ form_row(contact.role) }}
            </td>
        </tr>
    </table>
</fieldset>
