<fieldset>
    <legend>Dataset Contact</legend>
    <table class="tab-table">
        {% set contact = form.datasetContacts | first %}
        <tr>
            <td>
				<span class="helpSection">
					{% image '@PelagosAppBundle/Resources/public/images/info32.png' %}
					<img class="info" src="{{ asset_url }}">
					{% endimage %}
					<div class="tooltiptext">
                        Please use the drop down list to select the person who can be contacted
                        about the dataset. If the person is not listed or their contact information
                        is incorrect, please contact griidc@gomri.org.
					</div>
				</span>
                <label for="datasetcontact">Person</label>
                <select class="contactperson" id="contactperson" name="{{contact.person.vars.full_name}}" required="required">
                    {% if contact.vars.data.person|default %}
                    <option selected value="{{contact.vars.data.person.id}}">
                        {{contact.vars.data.person.lastName}}, {{contact.vars.data.person.firstName}}, {{contact.vars.data.person.emailAddress}}
                    </option>
                    {% endif %}
                </select>
                <label for="contactperson" class="error"></label>
                {% include "PelagosAppBundle:DatasetSubmission:contact-information.html.twig" %}
			</td>
        </tr>
        <tr>
            <td>
				<span class="helpSection">
					{% image '@PelagosAppBundle/Resources/public/images/info32.png' %}
					<img class="info" src="{{ asset_url }}">
					{% endimage %}
					<div class="tooltiptext">
                        Please select the personâ€™s relationship to the dataset from the drop down
                        list.
					</div>
				</span>
                {{ form_row(contact.role) }}
            </td>
        </tr>

        <tr>
            <td>
				<span class="helpSection">
					{% image '@PelagosAppBundle/Resources/public/images/info32.png' %}
					<img class="info" src="{{ asset_url }}">
					{% endimage %}
					<div class="tooltiptext">
                        Please provide a list of authors who should be acknowledged if these data
                        are cited in published materials.
					</div>
				</span>
                {{ form_row(form.authors) }}
            </td>
        </tr>
    </table>
</fieldset>
