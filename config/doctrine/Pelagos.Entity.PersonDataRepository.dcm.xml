<!--
This file defines the Doctrine mapping between the Pelagos\Entity\PersonDataRepository
entity class and the person2data_repository2role view in the postgres database.
Properties other than id that are inherited from Pelagos\Entity\Entity are mapped in
Pelagos.Entity.Entity.dcm.xml
-->

<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                        http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="Pelagos\Entity\PersonDataRepository" table="person2data_repository2role">

        <id name="id" column="person2data_repository2role_number" type="integer">
            <generator strategy="SEQUENCE" />
            <sequence-generator sequence-name="seq_person2data_repository2role_number" allocation-size="1" initial-value="1" />
        </id>

        <many-to-one field="person" target-entity="Person" inversed-by="personDataRepositories">
            <join-column name="person_number" referenced-column-name="person_number" />
        </many-to-one>

        <many-to-one field="dataRepository" target-entity="DataRepository" inversed-by="personDataRepositories">
            <join-column name="data_repository_number" referenced-column-name="data_repository_number" />
        </many-to-one>

        <many-to-one field="role" target-entity="DataRepositoryRole">
            <join-column name="data_repository_role_number" referenced-column-name="data_repository_role_number" />
        </many-to-one>

        <field name="label" column="label" type="string" />

    </entity>

</doctrine-mapping>
