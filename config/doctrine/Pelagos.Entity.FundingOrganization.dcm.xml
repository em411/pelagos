<!-- config/xml/Pelagos.FundingOrganization.dcm.xml -->

<!--
Postgres gomri database funding_organization table
            Column            |  Type   | Modifiers
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~+~~~~~~~~~+~~~~~~~~~~~
 funding_organization_number | integer |
 name                        | text    |
 description                 | text    |
 phone_number                | text    |
 email_address               | text    |
 website                     | text    |
 delivery_point              | text    |
 city                        | text    |
 administrative_area         | text    |
 country                     | text    |
 postal_code                 | text    |
 logo                        | bytea   |
-->


<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                        http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="Pelagos\Entity\FundingOrganization" table="funding_organization">
        <id name="id" column="funding_organization_number" type="integer">
            <generator strategy="SEQUENCE" />
            <sequence-generator sequence-name="seq_funding_organization_number" allocation-size="1" initial-value="1" />
        </id>

        <field name="name"               column="name"                        type="string" />

        <field name="logo"               column="logo"                        type="blob" />

        <field name="emailAddress"       column="email_address"               type="string" />

        <field name= "description"       column="description"                 type="string" />

        <field name="url"                column="website"                     type="string" />

        <field name="phoneNumber"        column="phone_number"                type="string" />

        <field name="deliveryPoint"      column="delivery_point"              type="string" />

        <field name="city"               column="city"                        type="string" />

        <field name="country"            column="country"                     type="string" />

        <field name="administrativeArea" column="administrative_area"         type="string" />

        <field name="postalCode"         column="postal_code"                 type="string" />

    </entity>
</doctrine-mapping>