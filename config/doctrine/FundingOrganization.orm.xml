<!--
This file defines the Doctrine mapping between the Pelagos\Entity\FundingOrganization
entity class and the funding_organization view in the postgres database.
Properties other than id that are inherited from Pelagos\Entity\Entity are mapped in
Pelagos.Entity.Entity.dcm.xml
-->

<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                        http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="Pelagos\Entity\FundingOrganization" table="funding_organization">

        <id name="id" column="funding_organization_number" type="integer">
            <generator strategy="SEQUENCE" />
            <sequence-generator sequence-name="seq_funding_organization_number" allocation-size="1" initial-value="1" />
        </id>

        <field name="name"               column="name"                type="citext" />

        <field name="logo"               column="logo"                type="blob"   nullable="true" />

        <field name="emailAddress"       column="email_address"       type="citext" nullable="true" />

        <field name="description"        column="description"         type="string" nullable="true" />

        <field name="url"                column="website"             type="string" nullable="true" />

        <field name="phoneNumber"        column="phone_number"        type="string" nullable="true" />

        <field name="deliveryPoint"      column="delivery_point"      type="string" nullable="true" />

        <field name="city"               column="city"                type="string" nullable="true" />

        <field name="country"            column="country"             type="string" nullable="true" />

        <field name="administrativeArea" column="administrative_area" type="string" nullable="true" />

        <field name="postalCode"         column="postal_code"         type="string" nullable="true" />

        <one-to-many field="fundingCycles" target-entity="FundingCycle" mapped-by="fundingOrganization">
            <order-by>
                <order-by-field name="name" direction="ASC" />
            </order-by>
        </one-to-many>

        <one-to-many field="personFundingOrganizations" target-entity="PersonFundingOrganization" mapped-by="fundingOrganization" />

        <many-to-one  field="dataRepository" target-entity="DataRepository" inversed-by="fundingOrganizations">
                    <join-column name="data_repository_number" referenced-column-name="data_repository_number" />
        </many-to-one>

    </entity>

</doctrine-mapping>