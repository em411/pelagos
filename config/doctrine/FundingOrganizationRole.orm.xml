<!--
This file defines the Doctrine mapping between the Pelagos\Entity\FundingOrganizationRole
entity class and the funding_organization_role view in the postgres database.
Properties other than id that are inherited from Pelagos\Entity\Entity and are mapped in
Pelagos.Entity.Entity.dcm.xml
-->

<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                        http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="Pelagos\Entity\FundingOrganizationRole" table="funding_organization_role">

        <id name="id" column="funding_organization_role_number" type="integer">
            <generator strategy="SEQUENCE" />
            <sequence-generator sequence-name="seq_funding_organization_role_number" allocation-size="1" initial-value="1" />
        </id>

        <field name="name"   column="name"   type="citext" />

        <field name="weight" column="weight" type="integer" />

    </entity>

</doctrine-mapping>
