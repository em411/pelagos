<!--
This file defines the Doctrine mapping between the Pelagos\Entity\PersonToken
entity class and the person_token view in the postgres database.
Properties other than id that are inherited from Pelagos\Entity\Entity and are mapped in
Pelagos.Entity.Entity.dcm.xml
-->

<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                        http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="Pelagos\Entity\PersonToken" table="person_token">

        <id name="person" association-key="true"/>

        <field name="tokenText"   column="token"   type="string" />

        <field name="use"   column="use"   type="token_use_type" />

        <field name="validFor"   column="valid_for"   type="interval" />

        <one-to-one field="person" target-entity="Person">
           <join-column name="person_number" referenced-column-name="person_number" />
        </one-to-one>
    </entity>

</doctrine-mapping>
