[Unit]
Description=Control Pelagos consumers
After=network.target

[Service]
Type=oneshot
ExecStart=/bin/bash /usr/local/bin/control-pelagos-rabbit-consumers.sh start
ExecStop=/bin/bash /usr/local/bin/control-pelagos-rabbit-consumers.sh stop
RemainAfterExit=yes

[Install]
WantedBy=multi-user.target
