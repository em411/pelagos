<gmd:MD_Distribution>
    <gmd:distributor>
        <gmd:MD_Distributor>
            <gmd:distributorContact>
                {% set RPType = 'DIST' %}
                {% include "xml/CI_ResponsibleParty.xml" %}
            </gmd:distributorContact>
            {% if dataset.formatName %}
                <gmd:distributorFormat>
                    <gmd:MD_Format>
                        <gmd:name>
                            <gco:CharacterString>{{dataset.formatName}}</gco:CharacterString>
                        </gmd:name>
                        {% if dataset.formatVersion %}
                            <gmd:version>
                                <gco:CharacterString>{{dataset.formatVersion}}</gco:CharacterString>
                            </gmd:version>
                        {% else %}
                            <gmd:version gco:nilReason="unknown"/>
                        {% endif %}
                        {% if dataset.fileDecompressionTechnique %}
                            <gmd:fileDecompressionTechnique>
                                <gco:CharacterString>{{dataset.fileDecompressionTechnique}}</gco:CharacterString>
                            </gmd:fileDecompressionTechnique>
                        {% endif %}
                    </gmd:MD_Format>
                </gmd:distributorFormat>
            {% else %}
                <gmd:distributorFormat/>
            {% endif %}
            <gmd:distributorTransferOptions>
                <gmd:MD_DigitalTransferOptions>
                    {% if dataset.size %}
                        <gmd:transferSize>
                            <gco:Real>{{dataset.size}}</gco:Real>
                        </gmd:transferSize>
                    {% else %}
                        <gmd:transferSize/>
                    {% endif %}
                    <gmd:onLine>
                        <gmd:CI_OnlineResource>
                            <gmd:linkage>
                                <gmd:URL>{{dataset.url}}</gmd:URL>
                            </gmd:linkage>
                        </gmd:CI_OnlineResource>
                    </gmd:onLine>
                </gmd:MD_DigitalTransferOptions>
            </gmd:distributorTransferOptions>
        </gmd:MD_Distributor>
    </gmd:distributor>
</gmd:MD_Distribution>
