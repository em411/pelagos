[
    {% for inst in YR1 %}
    {
        "data": {
            "title": "{{inst.Name | removeYR1BG}} ({{inst.Abbr}})",
            "attr": {
                "style": "color:{{tree.yr1_color}}"
                ,
                "href": "{{tree.yr1_link | evaluate}}"
            }
        },
        "attr": {
            "id": "projects_fundSrc_{{inst.ID}}"
        }
        {% if tree.max_depth > 0 %}
        ,
            {% if tree.expand_to_depth > 0 %}
                "state": "open"
            {% else %}
                "state": "closed"
            {% endif %}
        {% endif %}
    }
    {% if not loop.last %}
    ,
    {% endif %}
    {% endfor %}
]
