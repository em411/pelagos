[
    {% for inst in YR1 %}
    {
        "data": {
            "title": "{{inst.Name | removeYR1BG}} ({{inst.Abbr}}){% if inst.dataset_count %} <span style='color:black;font-weight:bold;'>({{inst.dataset_count}})</span>{% endif %}",
            "attr": {
                "style": "color:{{tree.yr1_color}}"
            }
        },
        "attr": {
            "id": "projects_fundSrc_{{inst.ID}}",
            "action": "{{tree.yr1_action | evaluate}}"
        }
        {% if tree.max_depth > 0 %}
        ,
            {% if tree.expand_to_depth > 0 %}
                "state": "open"
            {% else %}
                "state": "closed"
            {% endif %}
        {% endif %}
    }
    {% if not loop.last %}
    ,
    {% endif %}
    {% endfor %}
]
