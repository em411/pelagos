[
{% for task in tasks %}
    {
        "data": {
            "title": "{{task.Title | raw}}{% if task.dataset_count %} <span style='color:black;font-weight:bold;'>({{task.dataset_count}})</span>{% endif %}",
            "attr": {
                "style": "color:{{tree.task_color}}",
                "href": "{{tree.task_link | evaluate}}"
            }
        }
        ,
        "attr": {
            "id": "datasets_taskId_{{task.ID}}"
        }
        {% if tree.max_depth > 2 %}
            ,
            {% if tree.expand_to_depth > 2 %}
                "state": "open"
            {% else %}
                "state": "closed"
            {% endif %}
        {% endif %}
    }
    {% if not loop.last %}
    ,
    {% endif %}
{% endfor %}
]
