[
    {% if not YR1.hide %}
    {
        "data": {
            "title": "Year-One Block Grants{% if YR1.dataset_count %} <span style='color:black;font-weight:bold;'>({{YR1.dataset_count}})</span>{% endif %}",
            "attr": {
                "style": "color:{{tree.yr1_folder_color}}"
            }
        },
        "attr": {
            "id": "YR1",
            "action": "{{tree.yr1_folder_action | evaluate}}"
        },
        "state": "closed"
    }
    ,
    {% endif %}
    {% for RFP in RFPS %}
    {
        "data": {
            "title": "{{RFP.Name}}{% if RFP.dataset_count %} <span style='color:black;font-weight:bold;'>({{RFP.dataset_count}})</span>{% endif %}",
            "attr": {
                "style": "color:{{tree.rfp_color}}"
            }
        },
        "attr": {
            "id": "projects_fundSrc_{{RFP.ID}}",
            "action": "{{tree.rfp_action | evaluate}}"
        }
        {% if RFP.ID == 7 or tree.max_depth > 0 %}
            ,
            {% if tree.expand_to_depth > 0 %}
                "state": "open"
            {% else %}
                "state": "closed"
            {% endif %}
        {% endif %}
    }
    {% if not loop.last %}
    ,
    {% endif %}
    {% endfor %}
    {% if YR1.hide and not RFPS %}
    {
        "data": {
            "title": "no datasets found",
            "attr": {
                "style": "color:red"
            }
        }
    }
    {% endif %}
]
